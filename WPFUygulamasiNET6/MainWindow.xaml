<Window x:Class="WPFUygulamasiNET6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUygulamasiNET6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Slider x:Name="slider"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="300" ValueChanged="Slider_ValueChanged" Maximum="100"/>
        <ProgressBar x:Name="progressBar"  HorizontalAlignment="Left" Height="10" Margin="10,33,0,0" VerticalAlignment="Top" Width="300"/>
        <TextBox x:Name="tbxLogs" HorizontalAlignment="Left" Margin="10,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="161"/>
        <RadioButton x:Name="rbtnStatus" Content="" HorizontalAlignment="Left" Margin="315,48,0,0" VerticalAlignment="Top" Height="14" Width="14" ClickMode="Release"/>
        <Button x:Name="btnStart" Content="START" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Height="30" Width="60" Click="btnStart_Click"/>
        <Button x:Name="btnStop" Content="STOP" HorizontalAlignment="Left" Margin="380,10,0,0" VerticalAlignment="Top" Width="60" Height="30" Click="btnStop_Click"/>
        <ComboBox x:Name="drbxDevices" HorizontalAlignment="Left" Margin="445,12,0,0" VerticalAlignment="Top" Width="250" ContextMenuOpening="drbxDevices_ContextMenuOpening" DropDownOpened="drbxDevices_DropDownOpened" SelectionChanged="drbxDevices_SelectionChangedAsync" >
        </ComboBox>
        <RadioButton Content="RadioButton" HorizontalAlignment="Left" Margin="355,55,0,0" VerticalAlignment="Top"/>
        <Button x:Name="getProps" Content="Get Props." HorizontalAlignment="Left" Margin="465,79,0,0" VerticalAlignment="Top" Height="38" Width="105" Click="getProps_Click"/>

    </Grid>
</Window>
